# ========================================
# CONFIGURAÇÃO DE PRODUÇÃO - SGP v4
# ========================================

# Configurações do Banco de Dados
DATABASE_URL=postgres://usuario:senha@localhost:5432/sgp_v4_production
DATABASE_MAX_CONNECTIONS=20
DATABASE_TIMEOUT=30

# Configurações de Segurança
BCRYPT_ROUNDS=12
SESSION_TIMEOUT=3600
MAX_LOGIN_ATTEMPTS=5

# Configurações de Performance
POLLING_INTERVAL=60
CACHE_TTL=300
MAX_CACHE_SIZE=1000

# Configurações de Log
LOG_LEVEL=INFO
LOG_FILE=/var/log/sgp-v4/app.log
LOG_MAX_SIZE=10MB
LOG_MAX_FILES=5

# Configurações de Backup
BACKUP_ENABLED=true
BACKUP_INTERVAL=24h
BACKUP_RETENTION_DAYS=30
BACKUP_PATH=/var/backups/sgp-v4

# Configurações de Monitoramento
HEALTH_CHECK_INTERVAL=300
METRICS_ENABLED=true
PERFORMANCE_MONITORING=true

# Configurações de Rede
HTTP_TIMEOUT=30
CONNECTION_POOL_SIZE=10
KEEP_ALIVE_TIMEOUT=60

# Configurações de Arquivo
MAX_FILE_SIZE=50MB
ALLOWED_FILE_TYPES=jpg,jpeg,png,pdf,doc,docx
UPLOAD_PATH=/var/uploads/sgp-v4

# Configurações de Notificação
NOTIFICATION_ENABLED=true
EMAIL_SMTP_HOST=smtp.gmail.com
EMAIL_SMTP_PORT=587
EMAIL_USERNAME=seu-email@gmail.com
EMAIL_PASSWORD=sua-senha-app

# Configurações de Backup Automático
AUTO_BACKUP_ENABLED=true
AUTO_BACKUP_TIME=02:00
AUTO_BACKUP_COMPRESSION=true

# Configurações de Limpeza
CLEANUP_ENABLED=true
CLEANUP_INTERVAL=24h
TEMP_FILE_RETENTION=7d
LOG_CLEANUP_ENABLED=true

# Configurações de Desenvolvimento (desabilitar em produção)
DEBUG_MODE=false
VERBOSE_LOGGING=false
DEVELOPMENT_FEATURES=false

