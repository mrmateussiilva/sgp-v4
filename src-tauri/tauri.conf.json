{
  "$schema": "../node_modules/@tauri-apps/cli/schema.json",
  "build": {
    "beforeDevCommand": "npm run dev",
    "beforeBuildCommand": "npm run build",
    "devPath": "http://localhost:1420",
    "distDir": "../dist",
    "withGlobalTauri": false
  },
  "package": {
    "productName": "SGP - Sistema de Gerenciamento de Pedidos",
    "version": "1.0.0"
  },
  "tauri": {
    "allowlist": {
      "http": {
        "all": false,
        "request": true,
        "scope": [
          "http://*",
          "https://*"
        ]
      },
      "all": false,
      "shell": {
        "all": false,
        "open": true
      },
      "dialog": {
        "all": true,
        "ask": true,
        "confirm": true,
        "message": true,
        "open": true,
        "save": true
      },
      "fs": {
        "all": false,
        "readFile": true,
        "writeFile": true,
        "removeFile": true,
        "createDir": true,
        "exists": true,
        "scope": [
          "$APP_CONFIG",
          "$APP_CONFIG/*",
          "$APP_CONFIG/**",
          "$APP_CONFIG/com.sgp.v4",
          "$APP_CONFIG/com.sgp.v4/*",
          "$APP_CONFIG/com.sgp.v4/**",
          "$APP_CONFIG/com.sgp.desktop",
          "$APP_CONFIG/com.sgp.desktop/*",
          "$APP_CONFIG/com.sgp.desktop/**",
          "$APP_CONFIG/config.json",
          "$CONFIG/com.sgp.v4",
          "$CONFIG/com.sgp.v4/*",
          "$CONFIG/com.sgp.v4/**",
          "$CONFIG/com.sgp.desktop",
          "$CONFIG/com.sgp.desktop/*",
          "$CONFIG/com.sgp.desktop/**"
        ]
      },
      "path": {
        "all": true
      }
    },
    "bundle": {
      "active": true,
      "targets": ["msi"],
      "identifier": "com.sgp.desktop",
      "icon": [
        "icons/icon.icns",
        "icons/icon_fixed.ico",
        "icons/icon.png"
      ],
      "resources": [],
      "externalBin": [],
      "copyright": "© 2024 SGP Team. Todos os direitos reservados.",
      "category": "Business",
      "shortDescription": "Sistema de Gerenciamento de Pedidos",
      "longDescription": "Sistema completo para gerenciamento de pedidos com controle de produção, estoque e relatórios.",
      "deb": {
        "depends": []
      },
      "macOS": {
        "frameworks": [],
        "minimumSystemVersion": "10.13",
        "exceptionDomain": ""
      },
      "windows": {
        "certificateThumbprint": null,
        "digestAlgorithm": "sha256",
        "timestampUrl": "",
        "webviewInstallMode": {
          "type": "embedBootstrapper"
        }
      }
    },
    "security": {
      "csp": "default-src 'self' blob: data: filesystem: ws: http://192.168.*.*:* http://10.*.*.*:* http://172.16.*.*:* https://* http://*; img-src 'self' asset: https://asset.localhost; style-src 'self' 'unsafe-inline'; font-src 'self'; script-src 'self' 'unsafe-inline'; connect-src 'self' tauri://localhost http://192.168.15.3:8000 http://192.168.*.*:* http://10.*.*.*:* http://172.16.*.*:* https://* http://* ws://* wss://*;"
    },
    "updater": {
      "active": true,
      "dialog": true,
      "endpoints": [
        "http://sgp.finderbit.com.br/update"
      ],
      "pubkey": "INSERIR_PUBKEY_AQUI"
    },
    "windows": [
      {
        "fullscreen": false,
        "resizable": true,
        "title": "SGP - Sistema de Gerenciamento de Pedidos",
        "width": 1280,
        "height": 800,
        "minWidth": 800,
        "minHeight": 600,
        "label": "main",
        "additionalBrowserArgs": "--allow-running-insecure-content --unsafely-treat-insecure-origin-as-secure=http://192.168.15.3:8000 --disable-features=BlockInsecurePrivateNetworkRequests"
      }
    ]
  }
}
