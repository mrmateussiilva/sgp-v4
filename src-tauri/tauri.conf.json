{
  "$schema": "../node_modules/@tauri-apps/cli/config.schema.json",
  "identifier": "com.sgp.desktop",
  "productName": "SGP - Sistema de Gerenciamento de Pedidos",
  "version": "1.0.0",

  "build": {
    "beforeDevCommand": "npm run dev",
    "beforeBuildCommand": "npm run build",
    "devUrl": "http://localhost:1420",
    "frontendDist": "../dist"
  },

  "app": {
    "withGlobalTauri": true,
    "security": {
      "csp": {
        "default-src": [
          "'self'",
          "https://com.sgp.desktop.localhost"
        ],
        "connect-src": [
          "ipc:",
          "https://ipc.localhost",
          "https://com.sgp.desktop.localhost",
          "http://localhost:*",
          "http://127.0.0.1:*",
          "http://192.168.15.2:8000",
          "http://192.168.15.3:8000"
        ],
        "img-src": [
          "'self'",
          "data:",
          "asset:",
          "https://asset.localhost"
        ],
        "font-src": [
          "'self'",
          "data:",
          "asset:"
        ],
        "script-src": [
          "'self'",
          "'unsafe-inline'",
          "'unsafe-eval'"
        ],
        "style-src": [
          "'self'",
          "'unsafe-inline'"
        ]
      },
      "devCsp": {
        "default-src": [
          "'self'",
          "https://com.sgp.desktop.localhost",
          "http://localhost:*"
        ],
        "connect-src": [
          "ipc:",
          "http://ipc.localhost",
          "https://ipc.localhost",
          "https://com.sgp.desktop.localhost",
          "http://localhost:*",
          "http://127.0.0.1:*",
          "http://192.168.15.2:8000",
          "http://192.168.15.3:8000"
        ],
        "img-src": [
          "'self'",
          "data:",
          "asset:",
          "https://asset.localhost"
        ],
        "font-src": [
          "'self'",
          "data:",
          "asset:"
        ],
        "script-src": [
          "'self'",
          "'unsafe-inline'",
          "'unsafe-eval'"
        ],
        "style-src": [
          "'self'",
          "'unsafe-inline'"
        ]
      },
      "headers": {
        "Access-Control-Allow-Methods": "GET, POST, PUT, PATCH, DELETE, OPTIONS",
        "Access-Control-Allow-Headers": "Origin, Content-Type, Accept, Authorization",
        "Cross-Origin-Opener-Policy": "unsafe-none",
        "Cross-Origin-Embedder-Policy": "unsafe-none",
        "Cross-Origin-Resource-Policy": "cross-origin",
        "Timing-Allow-Origin": [
          "https://com.sgp.desktop.localhost",
          "*"
        ]
      },
      "assetProtocol": {
        "enable": true,
        "scope": [
          "$APP/*",
          "$RESOURCE/*"
        ]
      },
      "pattern": {
        "use": "brownfield"
      },
      "capabilities": []
    },
    "windows": [
      {
        "label": "main",
        "title": "SGP - Sistema de Gerenciamento de Pedidos",
        "width": 1280,
        "height": 800,
        "minWidth": 800,
        "minHeight": 600,
        "resizable": true,
        "useHttpsScheme": true,
        
        "fullscreen": false,
        "additionalBrowserArgs": "--allow-running-insecure-content --unsafely-treat-insecure-origin-as-secure=http://192.168.15.2:8000,http://192.168.15.3:8000,http://192.168.*.*:8000,http://10.*.*.*:8000,http://172.16.*.*:8000 --disable-features=BlockInsecurePrivateNetworkRequests --disable-web-security --allow-insecure-localhost"
      }
    ]
  },

  "bundle": {
    "active": true,
    "targets": ["msi"],
    "createUpdaterArtifacts": "v1Compatible",

    "icon": [
      "icons/icon.icns",
      "icons/icon_fixed.ico",
      "icons/icon.png"
    ],

    "windows": {
      "webviewInstallMode": {
        "type": "embedBootstrapper"
      },
      "digestAlgorithm": "sha256"
    }
  },

  "plugins": {
    "updater": {
      "active": true,
      "dialog": true,
      "endpoints": ["https://sgp.finderbit.com.br/update"],
      "pubkey": "dW50cnVzdGVkIGNvbW1lbnQ6IG1pbmlzaWduIHB1YmxpYyBrZXk6IEY2MjhBQzk1NTFCMzQyRQpSV1F1TkJ0VnlZcGlEOWRoQ0xXU0hOU1psSElqYm9MbEhKd2hoL3RSWmI0SEJqK0J1R0UyQkpSNgo="
    }
  }
}
