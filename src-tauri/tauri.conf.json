{
  "build": {
    "beforeDevCommand": "npm run dev",
    "beforeBuildCommand": "npm run build",
    "devPath": "http://localhost:1420",
    "distDir": "../dist",
    "withGlobalTauri": false
  },
  "package": {
    "productName": "SGP - Sistema de Gerenciamento de Pedidos",
    "version": "1.0.0"
  },
  "tauri": {
    "allowlist": {
      "all": false,
      "shell": {
        "all": false,
        "open": true
      },
      "dialog": {
        "all": true,
        "ask": true,
        "confirm": true,
        "message": true,
        "open": true,
        "save": true
      }
    },
    "bundle": {
      "active": true,
      "targets": "all",
      "identifier": "com.sgp.v4",
      "icon": [
        "icons/icon.icns",
        "icons/icon_fixed.ico",
        "icons/icon.png"
      ],
      "resources": [],
      "externalBin": [],
      "copyright": "© 2024 SGP Team. Todos os direitos reservados.",
      "category": "Business",
      "shortDescription": "Sistema de Gerenciamento de Pedidos",
      "longDescription": "Sistema completo para gerenciamento de pedidos com controle de produção, estoque e relatórios.",
      "deb": {
        "depends": []
      },
      "macOS": {
        "frameworks": [],
        "minimumSystemVersion": "10.13",
        "exceptionDomain": ""
      },
      "windows": {
        "certificateThumbprint": null,
        "digestAlgorithm": "sha256",
        "timestampUrl": "",
        "webviewInstallMode": {
          "type": "embedBootstrapper"
        }
      }
    },
    "security": {
      "csp": "default-src 'self'; img-src 'self' asset: https://asset.localhost; style-src 'self' 'unsafe-inline'; font-src 'self'; script-src 'self' 'unsafe-inline'; connect-src 'self' ws://localhost:* wss://localhost:*;"
    },
    "keyboardShortcuts": [
      {
        "key": "F12",
        "command": "toggle_devtools"
      },
      {
        "key": "Ctrl+Shift+I",
        "command": "toggle_devtools"
      },
      {
        "key": "Ctrl+Shift+J",
        "command": "open_devtools"
      }
    ],
    "updater": {
      "active": true,
      "dialog": true,
      "endpoints": [
        "https://sgp-v4-updates.finderbit.com.br/{{target}}/{{current_version}}"
      ],
      "pubkey": "dW50cnVzdGVkIGNvbW1lbnQ6IG1pbmlzaWduIHB1YmxpYyBrZXk6IDFEQjE2RjAxNDhFRDM5MjMKUldRak9lMUlBVyt4SFJoRW53UEEzWGRwVXQwaVp4QjJrRDN6VDdiZ3RlK3ZIVVZHd0hLc1NwNjUK",
      "windows": {
        "installMode": "passive"
      }
    },
    "windows": [
      {
        "fullscreen": false,
        "resizable": true,
        "title": "SGP - Sistema de Gerenciamento de Pedidos",
        "width": 1280,
        "height": 800,
        "minWidth": 800,
        "minHeight": 600,
        "label": "main"
      }
    ]
  }
}
