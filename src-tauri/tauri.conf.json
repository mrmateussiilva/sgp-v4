{
    "$schema": "../node_modules/@tauri-apps/cli/config.schema.json",
    "productName": "SGP - Sistema de Gerenciamento de Pedidos",
    "version": "1.0.4",
    "identifier": "com.sgp.desktop",
    "build": {
        "beforeDevCommand": "pnpm run dev",
        "beforeBuildCommand": "pnpm run build",
        "devUrl": "http://localhost:1420",
        "frontendDist": "../dist"
    },
    "app": {
        "withGlobalTauri": false,
        "security": {
            "csp": "default-src 'self' blob: data: filesystem: ws: wss: http://*:* https://*:*; img-src 'self' data: blob: tauri://localhost asset: https://asset.localhost http://*:* https://*:*; style-src 'self' 'unsafe-inline'; font-src 'self'; script-src 'self' 'unsafe-inline'; connect-src 'self' blob: tauri://localhost ipc://localhost http://*:* https://*:* ws://*:* wss://*:*;",
            "capabilities": [
                "default"
            ]
        },
        "windows": [
            {
                "fullscreen": false,
                "resizable": true,
                "maximized": true,
                "title": "SGP - Sistema de Gerenciamento de Pedidos",
                "width": 1280,
                "height": 800,
                "minWidth": 800,
                "minHeight": 600,
                "label": "main"
            }
        ]
    },
    "plugins": {
        "updater": {
            "active": true,
            "endpoints": [
                "https://raw.githubusercontent.com/mrmateussiilva/sgp-v4/main/updater/latest.json"
            ],
            "dialog": true,
            "pubkey":"dW50cnVzdGVkIGNvbW1lbnQ6IG1pbmlzaWduIHB1YmxpYyBrZXk6IDcyNTFERTEzMzdGOTlDNEIKUldSTG5QazNFOTVSY3U0QnRmQnJoMEl6dnBNdGxwazN3MU5QSisvbmJDZWxQdGlTNFJmQjEzdnQK "
        }
    },
    "bundle": {
        "active": true,
        "targets": [
            "msi"
        ],
        "icon": [
            "icons/icon.icns",
            "icons/icon_fixed.ico",
            "icons/icon.png"
        ],
        "resources": [],
        "externalBin": [],
        "copyright": "© 2024 SGP Team. Todos os direitos reservados.",
        "category": "Business",
        "shortDescription": "Sistema de Gerenciamento de Pedidos",
        "longDescription": "Sistema completo para gerenciamento de pedidos com controle de produção, estoque e relatórios.",
        "linux": {
            "deb": {
                "depends": []
            }
        },
        "macOS": {
            "frameworks": [],
            "minimumSystemVersion": "10.13"
        },
        "windows": {
            "certificateThumbprint": null,
            "digestAlgorithm": "sha256",
            "timestampUrl": "",
            "webviewInstallMode": {
                "type": "embedBootstrapper"
            }
        }
    }
}
